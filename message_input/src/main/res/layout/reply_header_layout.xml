<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    tools:ignore="SpUsage">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/spacing_s_large"
        android:layout_height="@dimen/spacing_s_large"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_micro"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_close_24dp" />

    <View
        android:id="@+id/splitter"
        android:layout_width="@dimen/spacing_nano"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_micro"
        android:layout_marginStart="@dimen/spacing_micro"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_toEndOf="@id/close"
        android:background="@drawable/btn_rounded_green" />

    <com.emamagic.messageinput.FontTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_micro"
        android:layout_toEndOf="@id/splitter"
        android:textColor="@color/material_blue_800"
        android:textSize="@dimen/text_small"
        android:textStyle="bold" />

    <com.emamagic.messageinput.FontTextView
        android:id="@+id/summery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/title"
        android:layout_margin="@dimen/spacing_micro"
        android:layout_toEndOf="@id/splitter"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/text_xsmall"
        app:text_gravity="start" />
</RelativeLayout>