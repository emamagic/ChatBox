        <attr name="emojiButtonHeight" format="dimension|reference" />


        <!-- INPUT TEXT -->
        <attr name="inputText" format="string" />
        <attr name="inputHint" format="string" />
        <attr name="inputMaxLines" format="integer" />
        <attr name="inputTextSize" format="dimension|reference" />
        <attr name="inputTextColor" format="color|reference" />
        <attr name="inputHintColor" format="color|reference" />
        <attr name="inputBackground" format="reference" />
        <attr name="inputCursorDrawable" format="reference" />


        <!-- RECORD BUTTON -->
        <attr name="showRecordButton" format="boolean" />
        <attr name="recordButtonIcon" format="reference" />


        <!-- RECORDER VIEW -->
        <attr name="slideToCancelText" format="string" />
        <attr name="slideToCancelBounds" format="dimension" />
        <attr name="slideToCancelArrow" format="reference" />
        <attr name="slideToCancelMarginRight" format="dimension" />
        <attr name="slideToCancelArrowColor" format="color" />
        <attr name="counterTimeColor" format="color" />

        
        <!-- TYPING STATUS -->
        <attr name="delayTypingStatus" format="integer" />

    </declare-styleable>

    <declare-styleable name="CircleColorImageView">
        <attr name="circleColor" format="color" />
        <attr name="foregroundImageTintColor" format="color" />
    </declare-styleable>


</resources>