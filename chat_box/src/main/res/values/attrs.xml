<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ChatBox">

        <!-- SEND BUTTON ICON -->
        <attr name="sendButtonIcon" format="reference" />
        <attr name="sendButtonIconColor" format="color|reference" />
        <attr name="sendButtonIconPressedColor" format="color|reference" />
        <attr name="sendButtonIconDisabledColor" format="color|reference" />
        <!-- SEND BUTTON BACKGROUND -->
        <attr name="sendButtonBackground" format="reference"/>
        <attr name="sendButtonBgColor" format="color|reference"/>
        <attr name="sendButtonBgPressedColor" format="color|reference"/>
        <attr name="sendButtonBgDisabledColor" format="color|reference"/>
        <!-- SEND BUTTON SIZE -->
        <attr name="sendButtonMargin" format="dimension|reference" />
        <attr name="sendButtonWidth" format="dimension|reference" />
        <attr name="sendButtonHeight" format="dimension|reference" />

        
        <!-- ATTACHMENT BUTTON ICON -->
        <attr name="showAttachmentButton" format="boolean" />
        <attr name="attachmentButtonIcon" format="reference" />
        <attr name="attachmentButtonIconColor" format="color|reference" />
        <attr name="attachmentButtonIconPressedColor" format="color|reference" />
        <attr name="attachmentButtonIconDisabledColor" format="color|reference" />
        <!-- ATTACHMENT BUTTON BACKGROUND -->
        <attr name="attachmentButtonBackground" format="reference" />
        <attr name="attachmentButtonBgColor" format="color|reference" />
        <attr name="attachmentButtonBgPressedColor" format="color|reference" />
        <attr name="attachmentButtonBgDisabledColor" format="color|reference" />
        <!-- ATTACHMENT BUTTON SIZE -->
        <attr name="attachmentButtonMargin" format="dimension|reference" />
        <attr name="attachmentButtonWidth" format="dimension|reference" />
        <attr name="attachmentButtonHeight" format="dimension|reference" />

        
        <!-- EMOJI BUTTON ICON -->
        <attr name="showEmojiButton" format="boolean" />
        <attr name="emojiButtonIcon" format="reference" />
        <attr name="emojiButtonIconColor" format="color|reference" />
        <attr name="emojiButtonIconPressedColor" format="color|reference" />
        <attr name="emojiButtonIconDisabledColor" format="color|reference" />
        <!-- EMOJI BUTTON BACKGROUND -->
        <attr name="emojiButtonBackground" format="reference" />
        <attr name="emojiButtonBgColor" format="color|reference" />
        <attr name="emojiButtonBgPressedColor" format="color|reference" />
        <attr name="emojiButtonBgDisabledColor" format="color|reference" />
        <!-- EMOJI BUTTON SIZE -->
        <attr name="emojiButtonMargin" format="dimension|reference" />
